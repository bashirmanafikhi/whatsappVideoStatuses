<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardBackgroundColor="@color/myGroup2"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="4dp"
      android:paddingBottom="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/txtTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginBottom="7dp"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          android:text=""
          android:textAlignment="center"
          android:textColor="@color/mycolor7"
          android:textSize="16sp"
          tools:text="@tools:sample/first_names" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#FF2C3133"
          android:id="@+id/thumbnailImageView"/>

      <ImageView
          android:id="@+id/btnYoutube_player"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="center"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/btnLike"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0"
          android:background="@color/myGroup2"
          android:src="@drawable/favorite_border_black"
          tools:ignore="VectorDrawableCompat"
          android:padding="5dp"/>

      <TextView
          android:id="@+id/txtLikes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="5dp"
          android:textSize="5pt"
          android:text="268" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:text="|"
          android:textColor="@color/mycolor8" />


      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="2dp"
          android:src="@drawable/ic_eye_svgrepo_com"
          tools:ignore="VectorDrawableCompat"
          android:padding="5dp" />

      <TextView
          android:id="@+id/txtViews"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:textSize="5pt"
          android:text="268" />

      <TextView
          android:visibility="invisible"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:text="|"
          android:textColor="@color/mycolor8" />

      <ImageButton
          android:id="@+id/btnShare"
          android:visibility="invisible"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0"
          android:background="@color/myGroup2"
          android:src="@drawable/share_black"
          tools:ignore="VectorDrawableCompat"
          android:padding="5dp" />

      <TextView
          android:visibility="invisible"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:text="|"
          android:textColor="@color/mycolor8" />

      <ImageButton
          android:visibility="invisible"
          android:id="@+id/btnWhatsapp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0"
          android:background="@color/myGroup2"
          android:src="@drawable/ic_whatsapp_svgrepo_com"
          tools:ignore="VectorDrawableCompat"
          android:padding="5dp" />

      <TextView
          android:visibility="invisible"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:text="|"
          android:textColor="@color/mycolor8" />

      <ImageButton
          android:visibility="invisible"
          android:id="@+id/btnDownload"
          style="@android:style/Widget.DeviceDefault.ImageButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0"
          android:background="@color/myGroup2"
          android:src="@drawable/file_download_blackdp"
          tools:ignore="VectorDrawableCompat"
          android:padding="5dp" />


    </LinearLayout>


  </LinearLayout>

</androidx.cardview.widget.CardView>